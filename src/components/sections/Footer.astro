---
import Container from '../../../components/core/Container.astro';



const { footerLists, copyrightName, background, color } =
  Astro.props;
---
<footer
  style={background && `--footer-bg:${background}; --footer-color:${color}`}
>
  <Container>
    <div class="footer-grid__container">
      <div class="footer-brand__container">
        <div>
          <slot name="logo" />
        </div>
      </div>
      <figure>
        <a target="_blank" href="https://goo.gl/maps/twTrx4WDWD5vafLt5">
              <img
        id="addr-embed"
        src="/assets/images/addr_embed.png"
        alt="Astro Odyssey"
        loading="lazy"
      /></a>
        <figcaption>B-108, Mayur Appts, Sodawala Lane, Borivali West, Mumbai 400092</figcaption>
</figure>

      {
        footerLists.map((list) => (
          <div>
            <p><strong>{list.title}</strong></p>
            <ul class="footer-link__list">
              {list.items.map((item) => (
                <li>
                  <a href={item.slug}>{item.title}</a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
    <div class="footer-copyright__container">
      <p>Copyright &copy; {new Date().getFullYear()} {copyrightName}</p>
    </div>
  </Container>
</footer>

<style>
  #addr-embed {
    border-radius: 15px;
    border: 1px solid gainsboro;
    grid-column-start: 2;
    grid-column-end: 4;
    cursor: pointer;
  }
  #addr-embed > figcaption {
    padding: 100px;
    padding-top: 5px;
  }
  footer {
    --footer-bg: var(--theme-primary);
    --footer-color: var(--theme-on-primary);
    min-height: 40vh;
    background-color: var(--footer-bg);
    color: var(--footer-color);
    border-top-left-radius: var(--theme-shape-radius);
    border-top-right-radius: var(--theme-shape-radius);
  }
  .footer-grid__container {
    padding: 10vh 0 1rem 0;
    display: grid;
    grid-template-columns: 1fr 5fr 1fr;
    grid-gap: 150px;
  }
  .footer-socials__list {
    margin: 1rem 0;
    padding: 0;
    display: flex;
    list-style: none;
  }
  .footer-socials__item {
    margin-right: 0.5rem;
  }
  .footer-link__list {
    margin: 0;
    padding: 0;
    list-style: none;
  }
  .footer-link__list li {
    margin-bottom: 0.5rem;
  }
  .footer-link__list li a {
    text-decoration: none;
  }
  .footer-link__list li a:hover {
    opacity: 0.84;
  }
  .footer-copyright__container {
    display: flex;
    flex-direction: column;
    /* justify-content: space-between; */
  }
  .footer-copyright__container p {
    font-size: var(--font-size-sm);
  }
  @media (max-width: 768px) {
    .footer-grid__container :first-child {
      grid-column: 1/-1;
    }
    .footer-grid__container {
      padding: 5vh 0;
      grid-template-columns: 1fr;
      gap: 1rem;
    }
    #addr-embed {
      max-width: 100%;
    }
  }
  @media (max-width: 600px) {
    .footer-grid__container {
      padding: 5vh 0;
      grid-template-columns: 1fr;
      gap: 1rem;
    }
    .footer-copyright__container {
      flex-direction: column;
    }
    #addr-embed {
      max-width: 100%;
    }
  }
</style>
